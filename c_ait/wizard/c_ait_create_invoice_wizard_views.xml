<odoo>
    <record id="c_ait_create_invoice_wizard_form" model="ir.ui.view">
        <field name="name">c.ait.create.invoice.wizard.form</field>
        <field name="model">c.ait.create.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Invoice Wizard">
                <group>
                    <field name="project_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="invoice_date"/>
                    <field name="partner_id"/>
                    <!--- <field name="product_id"/> -->
                    <field name="journal_id"/>
                </group>
                <group>
                    <field name="total_hours_worked"/>
                    <field name="total_hours_invoiced"/>
                </group>
                <field name="account_analytic_line_ids" readonly="1"/>
                <field name="created_invoice_account_move_id" readonly="1"/>
                <footer>
                    <button string="Fetch Timesheets" type="object" name="action_fetch_timesheets" class="btn-primary"/>
                    <button string="Create invoice" class="btn-primary" type="object" name="action_create_invoice"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_c_ait_create_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Obraƒçun sati na projektu</field>
        <field name="res_model">c.ait.create.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_project_project"/>
    </record>
</odoo>
