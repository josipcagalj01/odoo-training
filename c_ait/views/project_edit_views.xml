<odoo>
    <record id="view_project_dit_form_inherit_project_edit" model="ir.ui.view">
        <field name="name">project.edit.form.enhanced</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="c_ait_client_reference" string="Client refrence" />
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="c_ait_end_user_partner_id" string="Krajnji korisnik" />
            </xpath>
            <xpath expr="//group[@name='extra_settings']" position="inside">
                <field name="c_ait_work_perspective_id"/>
                <field name="c_ait_discipline_ids"/>
                <field name="c_ait_tariff_id"/>
                <field name="c_ait_contract_id"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="employees_tariffs" string="Tariffs">
                    <group col="1">
                        <p class="o_form_label" style="margin-bottom:0">Dozvoljene tarife</p>
                        <field name="c_ait_allowed_tariff_ids" widget="many2many_tags" nolabel="1"/>
                    </group>
                    <group col="1">
                        <p class="o_form_label" style="margin-bottom:0">Tarife po zaposlenicima</p>
                        <field name="c_ait_project_employee_tariff" nolabel="1">
                            <list editable="bottom">
                                <field name="employee_id" string="Zaposlenik"/>
                                <field name="tariff_id" string="Tarifa" domain="[('id', 'in', parent.c_ait_allowed_tariff_ids)]"/>
                            </list>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>