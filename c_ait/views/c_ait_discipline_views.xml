<odoo>
    <record id="view_c_ait_discipline_tree" model="ir.ui.view">
        <field name="name">c.ait.discipline.tree</field>
        <field name="model">c.ait.discipline</field>
        <field name="arch" type="xml">
            <list string="Discipline">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_c_ait_discipline_form" model="ir.ui.view">
        <field name="name">c.ait.discipline.form</field>
        <field name="model">c.ait.discipline</field>
        <field name="arch" type="xml">
            <form string="Discipline">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_c_ait_discipline_search" model="ir.ui.view">
        <field name="name">c.ait.discipline.search</field>
        <field name="model">c.ait.discipline</field>
        <field name="arch" type="xml">
            <search string="Search Discipline">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_c_ait_discipline" model="ir.actions.act_window">
        <field name="name">Discipline</field>
        <field name="res_model">c.ait.discipline</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first discipline
            </p>
        </field>
    </record>

  <!-- MENU ITEM -->
    <menuitem id="menu_c_ait_discipline"
        name="Discipline"
        parent="project.menu_project_config"
        action="action_c_ait_discipline"
        sequence="10"
    />

</odoo>